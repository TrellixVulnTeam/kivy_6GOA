<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        Splitter:
            sizable_from: 'bottom'
#            sizable_from: 'top'
            Button:
                text: "hello world 1"
                font_size: 32

        Label:
            text: "This is some text"
            font_size: 32
        Splitter:
            sizable_from: 'top'
#            sizable_from: 'right'
            Button:
                text: "Hello world 2"
                font_size: 32
        GridLayout:
            cols : 2

            Button:
                text: "left"
                font_size: 32
            Splitter:
                sizable_from: 'left'
                Button:
                    text: "right"
                    font_size: 32

