# inherit the color properties
<MyLayout>

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        paddinng: 10
        spacing: 10

        Label:
            text: "Name"
            font_size: 45
            #117, 25, 59
            background_color: (117/255,25/250,59/250,1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            # text color or properties
            color: (0,1,0,1)
            bold: True
            italic: True
            outline_color:(0,0,1)
            outline_width: 10
        TextInput:
            multiline: False
        Button:
            text: "clear"
        Button:
            text: "submit"
            background_color: (1,0,0,1)

