# inherit the color properties
<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        Label:
            text: "Select pizza topping"
            font_size: 32
        GridLayout:
            cols: 2
            Label:
                text: "prepperoni"
                font_size: 20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "prepperoni")
            Label:
                text: "cheese"
                font_size: 20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "cheese") 
            Label:
                text: "Mushroom"
                font_size: 20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "Mushroom")          
        Label:
            id: output_label
            text: ""
            font_size: 32          


