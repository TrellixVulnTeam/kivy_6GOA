<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        Label:
            markup: True
            font_size: 32
            text: 'This is [color=#bf971d][b]bold[/b][/color] [font=times]text[/font][sup]up[/sup] and [sub]down[/sub]'
        Label:
            markup: True
            font_size: 32
            text: 'This is [size=150][i]italic[/i][/size] text[sup]up[/sup] and [sub]down[/sub]'
        Button:
            markup: True
            font_size: 32
            text: "[u]Click[/u] [s]me[/s]!"