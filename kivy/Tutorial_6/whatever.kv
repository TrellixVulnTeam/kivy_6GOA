<MyGridLayout>
    name: Name
    pizza: Pizza
    color: Color

    GridLayout:
        cols:1
        size: root.width, root.height
        GridLayout:
            cols:2

            Label:
                text: "Name"
            TextInput:
                id: Name
                multiline: False
            Label:
                text: "Favorite Pizza"
            TextInput:
                id: Pizza
                multiline: False
            Label:
                text: "Color"
            TextInput:
                id: Color
                multiline: False
        Button:
            text: "submit"
            font_size: 32
            on_press : root.press()
