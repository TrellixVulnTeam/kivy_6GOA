<MyLayout>
    slide_text: slide_label

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        Label:
            id: slide_label
            text: " Slide the slider! "
            font_size: 32

        Slider:
            min: 1
            max: 50
            step: 1
            orientation: "vertical"
            on_value: root.slide_it(*args)

