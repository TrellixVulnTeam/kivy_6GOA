<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        MDScreen:

            MDCard:
                orientation: "vertical"
                padding: "8dp"
                size_hint: None, None
                size: "280dp", "180dp"
                pos_hint: {"center_x": .5, "center_y": .5}

                MDLabel:
                    text: "Title"
                    theme_text_color: "Secondary"
                    adaptive_height: True

                MDSeparator:
                    height: "1dp"

                MDLabel:
                    text: "Body"
        Screen:
            MDSlider:
                min: 0
                max: 100
                value: 40